<mat-grid-list cols="2" gutterSize="10" rowHeight="2000px">
  <mat-grid-tile>
    <mat-vertical-stepper>
      	<mat-step>
      	  <ng-template matStepLabel>Step 1: Provide info for minting NFT</ng-template>
      	  <form (ngSubmit)="onSubmit()" #nftForm="ngForm">
      	    <div class="form-container">
      	      <br/>
      	      <mat-form-field>
      		<input matInput [(ngModel)]="model.assetName" name="assetName" type="text"  placeholder="Name of the NFT" disabled="{{reqSucceeded}}">
      		<mat-hint>Hint:This is the name of the token to be printed for this NFT. No special characters and space allowed.</mat-hint>
      	      </mat-form-field>
      	      <br/>
	      
      	      <mat-form-field>
      		<input matInput [(ngModel)]="model.assetAmount" name="assetAmount" placeholder="Number of NFT to mint"  disabled="{{reqSucceeded}}">
      		<mat-hint>Hint:Number of copies of this NFT to be printed</mat-hint>
      	      </mat-form-field>
      	      <br/>
	      
      	      <mat-form-field>
      		<input matInput [(ngModel)]="model.tags" type="text" placeholder="Tags" name="tags" disabled="{{reqSucceeded}}">
      		<mat-hint>Hint:Tags or keyword to characterize the NFT being created. Comma separated values</mat-hint>
      	      </mat-form-field>
      	      <br/>
	      
      	      <mat-form-field>
      		<input matInput [(ngModel)]="model.recvAddr" name="recvAddr" placeholder="Token receiving Address" disabled="{{reqSucceeded}}">
      		<mat-hint>Hint:Carefully check the destination address to which you want to send the NFT</mat-hint>
      	      </mat-form-field>
      	      <br/>
	      
      	      <br/>
      	      <mat-divider></mat-divider>
      	      <br/>
	      
      	      <re-captcha
      		(resolved)="resolved($event)"
      		(error)="onError($event)"
      		errorMode="handled"
      		siteKey="6Le8duQaAAAAAFOfEoncCKctnByqX1l47kbMEUnk">
      	      </re-captcha>
	      
      	      <br/>
      	      <mat-divider></mat-divider>
      	      <br/>
	      
      	      <div class="example-button-row">
      		<button mat-raised-button color="warn" class="shift-left"   disabled="{{buttonDisabled}}" >Cancel</button>
      		<button mat-flat-button color="primary" class="shift-right"  disabled="{{buttonDisabled}}" type="submit">Submit</button>
      	      </div>
      	    </div>
      	  </form>
      	</mat-step>
      	<mat-step>
      	  <ng-template matStepLabel>Step 2: Transfer Funds for Minting</ng-template>
      	  <div class="form-container">
      	    <mat-form-field>
      	      <input matInput [(ngModel)]="payModel.assetID" name="assetID" type="text"  placeholder="Unique ID generated for this transaction" readonly="readonly">
      	      <mat-hint>Hint:This ID is unique and generated only for this transaction. Store it properly </mat-hint>
      	    </mat-form-field>
      	    <br/>
	    
      	    <mat-form-field>
      	      <input matInput [(ngModel)]="payModel.mintingCost" name="mintingCost" placeholder="Cost of minting this NFT in ADA" readonly="readonly">
      	      <mat-hint>Hint:This is the cost of minting the NFT in {{payModel.currency}}</mat-hint>
      	    </mat-form-field>
      	    <br/>
	    
      	    <mat-form-field>
      	      <input matInput [(ngModel)]="payModel.payAddr" name="payAddr" placeholder="Payment address to which minting cost should be sent to" readonly="readonly">
      	      <mat-hint>Hint:This is the address to which the NFT needs to be transferred</mat-hint>
      	    </mat-form-field>
      	  </div>
      	  <button mat-button matStepperNext>Next</button>
      	</mat-step>
      	<mat-step>
      	  <ng-template matStepLabel>Step 3: Received NFT tokens</ng-template>
      	  <ng-template matStepContent>
      	    <p>This content was also rendered lazily</p>
      	    <button mat-button matStepperPrevious>Back</button>
      	    <button mat-button matStepperNext>Next</button>
      	  </ng-template>
      	</mat-step>
      	<mat-step>
      	  <ng-template matStepLabel>Finalize</ng-template>
      	  <p>This content was rendered eagerly</p>
      	  <button mat-button matStepperPrevious>Back</button>
      	</mat-step>
      </mat-vertical-stepper>
  </mat-grid-tile>
  <mat-grid-tile>
    <div class="form-container">
      <img [src]="url" class="img-fluid" id="imgupload" (click)="ImageClick()" *ngIf="url">
      <input type="file"  class="file-input"  (change)="onFileSelected($event)"  #fileUpload>
      <div class="file-upload">
	{{fileName || "No file uploaded yet."}}
	<button mat-mini-fab color="primary" class="upload-btn"
      		(click)="fileUpload.click()">
      	  <mat-icon>attach_file</mat-icon>
	</button>
      </div>
    </div>
  </mat-grid-tile>
</mat-grid-list>

